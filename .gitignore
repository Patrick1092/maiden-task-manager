# CrÃ©er le fichier .gitignore
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
.pnpm-store/

# Environment variables (IMPORTANT: ne jamais commiter les secrets)
.env
.env.local
.env.production

# Build outputs
dist/
build/
.vite/

# Logs
*.log
npm-debug.log*
pnpm-debug.log*

# OS files
.DS_Store
Thumbs.db

# IDE
.vscode/
.idea/
*.swp
*.swo

# Database
*.db
*.sqlite

# Temporary files
tmp/
temp/
EOF

# Ajouter le .gitignore au commit
git add .gitignore
git commit -m "Add .gitignore to protect sensitive files"
git push

